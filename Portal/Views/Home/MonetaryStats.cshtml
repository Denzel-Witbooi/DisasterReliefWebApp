@model IEnumerable<Portal.Models.ReliefViewModels.MonetaryGroup>

@{
    ViewBag.Title = "Disaster Relief Statistics";
}

<h1>Disaster Relief Statistics - Monetary Donations</h1>
<h3>Total Funds: @ViewBag.totalDonation</h3>

<table>
    <tr>
        <th>
            Donated Date
        </th>
        <th>
            Amount of Donators
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonationDate)
            </td>
            <td>
                @item.MonetaryCount
            </td>
        </tr>
    }

</table>
